{% extends 'base_admin.html.twig' %}

{% block title %}Nos services{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12">
            <h2>Section "Nos services"</h2>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class=" alert alert-warning">
                Permet de modifier la séction "Nos services" du site
            </div>
        </div>
    </div>

    <div class="row mt-5">
        {% if lastService is null %}
            <div class="col-12">
                <div class="alert alert-danger">Il n'y a pas de section "Nos services" sur le site</div>
            </div>
            <div class="col-sm-12">
                <a href="{{ path('backoffice_services_add') }}" class="btn btn-success">Créer la section</a>
            </div>
        {% else %}


            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>{{ lastService.title }}</h3>
                        <p>{{ lastService.description }}</p>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                {% if lastService.iconSections is empty %}
                                    <div class="alert alert-info">
                                        Vous n'avez encore aucun icon pack
                                    </div>
                                {% else %}
                                    <ul class="list-group">

                                    {% for iconSection in lastService.iconSections %}
                                            <li class="list-group-item">
                                                <div class="row">
                                                    <div class="col-1">
                                                        <i class="{{ iconSection.icon }}" style="font-size: 70px"></i>
                                                    </div>
                                                    <div class="col-8">
                                                        <h4>{{ iconSection.title }}</h4>
                                                        <p>{{ iconSection.description }}</p>
                                                    </div>
                                                    <div class="col-3">
                                                        <a href="" class="btn btn-danger">Supprimer</a>
                                                        <a href="" class="btn btn-warning">Modifier</a>
                                                    </div>
                                                </div>
                                            </li>
                                    {% endfor %}
                                    </ul>
                                {% endif %}

                                {% if lastService.iconSections is empty or lastService.iconSections.count < 4 %}
                                    <div class="row mt-3">
                                        <div class="col-12">
                                            <a href="{{ path('backoffice_services_icsection_add', { id : lastService.id }) }}" class="btn btn-success">Ajouter</a>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <a href="{{ path('backoffice_services_add') }}" class="btn btn-warning">Modifier</a>
                        <a href="{{ path('backoffice_about_add') }}" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            </div>

        {% endif %}
    </div>

{% endblock %}

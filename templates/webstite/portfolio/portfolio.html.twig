        <div class="row portfolio-container">
            {% for picture in portfolio.pictures %}
            <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                <div class="portfolio-wrap">
                    <img src="{{ asset(picture.file) }}" class="img-fluid" alt="">
                    <div class="portfolio-info">
                        <h4>{{ picture.title }}</h4>
                        <p>{{ picture.subtitle }}</p>
                        <div class="portfolio-links">
                            <a href="{{ asset(picture.file) }}" data-gallery="portfolioGallery" class="portfolio-lightbox" title="Web 3"><i class="bx bx-plus"></i></a>
                            {% if picture.link is not null %}
                                <a href="{{ picture.link }}" title="More Details"><i class="bx bx-link"></i></a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}


        </div>

    </div>
</section><!-- End Portfolio Section -->
